{
  "name": "fomora",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "db:generate": "cd packages/db && pnpm db:generate",
    "db:push": "cd packages/db && pnpm db:push",
    "db:migrate": "cd packages/db && pnpm db:migrate",
    "db:studio": "cd packages/db && pnpm db:studio",
    "db:seed": "cd packages/db && pnpm db:seed",
    "postbuild": "cd packages/db && pnpm db:generate",
    "deploy": "vercel --prod"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
